<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gerentes.NuevaMesaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#CDDC39"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="318dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblTituloNuevaMesa"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nueva Mesa"
                android:textColor="#000000"
                android:textSize="36sp"
                android:textStyle="bold"/>

            <Space
                android:layout_width="294dp"
                android:layout_height="18dp" />

            <TextView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tipo de Mesa:"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/spnTipoNuevaMesa"
                android:layout_width="285dp"
                android:layout_height="35dp"
                android:backgroundTint="#2196F3"></Spinner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnEliminarMesa"
                    android:layout_width="219dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#00BCD4"
                    android:text="ELIMINAR"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnAceptarNuevaMesa"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00BCD4"
                    android:text="AGREGAR"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnRegresarNuevaMesa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00BCD4"
                    android:text="Regresar"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>