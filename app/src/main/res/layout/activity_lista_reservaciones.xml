<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CDDC39"
    android:gravity="center"
    tools:context=".Gerentes.ListaReservacionesActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:gravity="center"
        android:text="Reservaciones"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <!-- <Button
        android:id="@+id/btnNuevaReservacion"
        android:layout_width="239dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:backgroundTint="#00BCD4"
        android:text="Nueva reservacion"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" /> -->

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txtFechaReservaciones"
        android:layout_width="316dp"
        android:layout_height="63dp"
        android:focusable="false"
        android:gravity="center"
        android:hint="Seleccionar la fecha"
        android:inputType="date"
        android:maxLines="1" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#00BCD4"
        android:text="Buscar Reservaciones"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lstReservaciones"
        android:layout_width="369dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>
</LinearLayout>