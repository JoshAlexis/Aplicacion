<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/lblIdReservacion"
        android:text="Aquí va el Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19dp"/>
    <TextView
        android:id="@+id/lblClienteReservacion"
        android:text="Aquí va la Cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19dp"/>
    <TextView
        android:id="@+id/lblNoMesaReservacion"
        android:text="Aquí va la NoMesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19dp"/>
    <TextView
        android:id="@+id/lblMesaReservacion"
        android:text="Aquí va la Mesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19dp"/>

    <TextView
        android:id="@+id/lblFechaReservacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aquí va el Fecha"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/lblInicioReservacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aquí va las Inicio"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/lblFinReservacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aquí va el Fin"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/lblStatusReservacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aquí va la Status"
        android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>