<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gerentes.NuevaComandaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#CDDC39"
        android:gravity="center">

        <TextView
            android:id="@+id/lblTituloNuevaComanda"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Nueva Comanda"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Mesa:"
            android:textColor="#000000"

            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtMesaNuevaComanda"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Numero de Mesa"
            android:inputType="number" />

        <TextView
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Elige los platillos:"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spnPlatillosNuevaComanda"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="#2196F3"
            android:foregroundTint="@color/colorPrimaryDark"></Spinner>

        <EditText
            android:id="@+id/txtCantidadNuevaComanda"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Cantidad"
            android:inputType="number" />

        <Button
            android:id="@+id/btnAgregarNuevaComanda"
            android:layout_width="239dp"
            android:layout_height="68dp"
            android:backgroundTint="#00BCD4"
            android:text="Elegir"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="Total:"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtTotalNuevaComanda"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:gravity="center"
            android:hint="Total"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Observaciones:"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txtObservacionesNuevaComanda"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Observaciones" />


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAceptarNuevaComanda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00BCD4"
                android:text="ACEPTAR"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnRegresarNuevaComanda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00BCD4"
                android:text="Regresar"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>