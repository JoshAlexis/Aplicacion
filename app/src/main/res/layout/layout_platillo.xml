<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/lblIdPlatillo"
        android:text="Aquí va el id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/lblNombrePlatillo"
        android:text="Aquí va el mesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/lblPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aquí va el total"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/lblEstadoPlatillo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aquí va el estado"
        android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>